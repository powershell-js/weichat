.conter{
  margin-top: 80rpx;
  z-index:99;
  display: flex;
  flex-direction: column;
  padding: 0 10% 0 10%;
}
.head{
  overflow: hidden;
  /* border:1px solid red; */
  margin: 0 auto;
  width: 80%;
  text-align: center;
  height: 30vh;
}
.head>image{
  width: 240rpx;
  height: 142rpx;
}
.input{
  /* margin:0 auto; */
    margin-bottom: 60rpx;
  width: 100%;
  /* padding: 10px; */
  border-bottom:1rpx solid #555;
  display: flex;
  flex-direction: row;
}
.input image{
  padding: 10rpx;
  width: 40rpx;
  height: 40rpx;
  /* margin-top: 16rpx; */
  /* padding-right:10px; */
}
.input input{
  padding:10rpx 0;
  width: 100%;
  height: 40rpx;
}
.title{
  text-align: right;
  /* text-decoration: underline;  */
  color:#008CFF;
  font-size: 24rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bottom{
  width: 100%;
  background: #008CFF;
  border-radius: 10rpx;
  text-align: center;
}
.bottom view{
  color: #fff;
  padding: 20rpx 0;
}
.place-holder{
  font-size: 24rpx;
}
.lo-hide{
  box-sizing: border-box;
  line-height: 66rpx;
  font-size: 24rpx;
}
.dialog{
  width: 100%;
  height: 100vh;
  position: fixed;
  top:0;
  background: black;
  opacity: 0.5;
}
.dia-conter{
  text-align: center;
  z-index:99;
  left:10%;
  top:40%;
  position: absolute;
  width: 80%;
  height: 30%;
  background: #fff;
  border-radius:10rpx;
}
.test{
  margin: 48rpx 0;
}
.yes{
  border-top:2rpx solid #555;
  display: flex;
  flex-direction: row;
  justify-content:center;
}
