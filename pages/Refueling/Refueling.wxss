/* pages/mileage/mileage.wxss */
.conter{
  width: 100%;
  background: #EBEEFF;
  padding:0 0 6% 0;
}
.download{
  width: 100%;
  height: 70rpx;
  background: #008CFF;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  top: 0;
  padding: 10rpx -40rpx 10rpx 0;
  z-index: 9999;
}
.co_img{
  position: fixed;
  width: 70rpx;
  height: 70rpx;
  top: -10rpx;
  
  right: 0;
}
.content{
  width: 90%;
  padding-top: 30rpx;
  margin: 60rpx auto;
}
.list{background: #fff;
  display: flex;
  flex-direction: row;
  padding: 0 4%;
  margin-bottom: 30rpx;
}
.image{
  position: relative;
  width: 15%;
  height: 90rpx;
}
.image>image{
  z-index: 9;
  position: absolute;
  width: 70rpx;
  height: 90rpx;
}
.image>text{
  z-index: 99;
  color: #fff;
  position: absolute;
  width: 70rpx;
  height: 90rpx;
  left: 10rpx;
  top: 15rpx;
}
.list_info{
  width: 85%;
  box-sizing: border-box;
  /* border:2rpx solid red; */
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.list_info>view{
  display: flex;
  flex-direction: row;
}
.qidian{
  width: 140rpx;
}
.No_time{
  text-align: center;
  line-height: 70rpx;
}
.location>view:nth-child(1){
  width: 180rpx;
}