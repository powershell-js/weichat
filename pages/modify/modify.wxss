.conter {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  /* border: 2rpx solid red; */
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.conter>view {
  width: 100%;
  box-sizing: border-box;
  /* border: 2rpx solid black; */
  margin: 20rpx 0;
}

.conter>view image {
  width: 40rpx;
  height: 40rpx;
}

.list1 {
  padding: 20rpx;
  border-radius: 10rpx;
  border: 2rpx solid #888;
  display: flex;
  flex-direction: row;
  /* height: 100rpx; */
}

.list2 {
  border-radius: 10rpx;
  border: 2rpx solid #888;
  width: 100%;
  /* height: 200rpx !important; */
  display: flex;
  flex-direction: column !important;
  padding: 20rpx;
}
.list2 view:nth-child(1){
  box-sizing: border-box;
  border-bottom:2rpx solid #888;
  padding-bottom: 10rpx;
}
.list2 view:nth-child(2){
  
  padding-top: 10rpx;
}
.list2 view {
  
   /* height: 100rpx; */
